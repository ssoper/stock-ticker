{
"compilerOptions": { /* Docs: https://www.typescriptlang.org/tsconfig */
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "dist",
    "rootDir": ".",
    "strict": true,
    "noImplicitAny": false,
    "strictNullChecks": true,
    "checkJs": true,
    "allowJs": true,
    "moduleResolution": "node",
    "types": [
    "node"
    ],
    "lib": [
    "es6", "dom"
    ],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowUnreachableCode": true,
    "useUnknownInCatchVariables": false,  // TypeScript 4.4+ only!
},
"include": [
    "index.ts",
    "src/**/*.ts",
    "src/**/*.js",
    "node_modules/@types/puppeteer/index.d.ts"
],
"exclude": [
    "node_modules",
    "<node_internals>/**",
]
}