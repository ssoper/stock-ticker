#!/usr/bin/env bash

STOCK_TICKER_HOME="$HOME/stock-ticker"
CHROMIUM_PORT=9123

# Disable power saving and screen savers
xset s noblank
xset s off
xset -dpms

# Update
cd "$STOCK_TICKER_HOME"
git pull
yarn

# Start
chromium-browser --start-fullscreen --remote-debugging-port="$CHROMIUM_PORT"
CHROMIUM_PORT="$CHROMIUM_PORT" NODE_ENV=production yarn start
